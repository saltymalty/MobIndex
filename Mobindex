This file goes with app.js. This is the second attempt of getting connected to the DB from a different way. 

var express = require('express');
var router = express.Router();
var mongodb = require('mongodb');
 
/* GET home page. */
// Defines the root route. router.get receives a path and a function
// The req object represents the HTTP request and contains
// the query string, parameters, body, header
// The res object is the response Express sends when it receives
// a request
// render says to use the views/index.jade file for the layout
// and to set the value for title to 'Express'
router.get('/', function(req, res, next) {
  res.render('index', { title: 'Express' });
});
 
router.get('/thelist', function(req, res){
 
  // Get a Mongo client to work with the Mongo server
  var MongoClient = mongodb.MongoClient;
 
  // Define where the MongoDB server is
  //var url = 'mongodb+srv://Andrey:Password123@mobindex-6rxsi.mongodb.net/test?retryWrites=true&w=majority';
  var url = 'mongodb://localhost:27017/sampsite';
  // Connect to the server
  MongoClient.connect(url, function (err, db) {
  if (err) {
    console.log('Unable to connect to the Server', err);
  } else {
    // We are connected
    console.log('Connection established to', url);
 
    // Get the documents collection
    var collection = db.collection('countries');
 
    // Find all countries
    collection.find({}).toArray(function (err, result) {
      if (err) {
        res.send(err);
      } else if (result.length) {
        res.render('countrylist',{
 
          // Pass the returned database documents to Jade
          "countrylist" : result
        });
      } else {
        res.send('No documents found');
      }
      //Close connection
      db.close();
    });
  }
  });
});

// Route to the page we can add countries from using newcountries.jade
router.get('/newcountry', function(req, res){
    res.render('newcountries', {title: 'Add countries' });
});
 
router.post('/addcountries', function(req, res){
 
    // Get a Mongo client to work with the Mongo server
    var MongoClient = mongodb.MongoClient;
 
    // Define where the MongoDB server is
    var url = 'mongodb://localhost:27017/sampsite';
 
    // Connect to the server
    MongoClient.connect(url, function(err, db){
      if (err) {
        console.log('Unable to connect to the Server:', err);
      } else {
        console.log('Connected to Server');
 
        // Get the documents collection
        var collection = db.collection('countries');
 
        // Get the countries data passed from the form
        var countries1 = {countries: req.body.countries, street: req.body.street,
          city: req.body.city, state: req.body.state, sex: req.body.sex,
          gpa: req.body.gpa};
 
        // Insert the countries data into the database
        collection.insert([countries1], function (err, result){
          if (err) {
            console.log(err);
          } else {
 
            // Redirect to the updated countries list
            res.redirect("thelist");
          }
 
          // Close the database
          db.close();
        });
 
      }
    });
 
  });

module.exports = router;
